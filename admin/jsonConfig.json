{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "service": {
                    "type": "select",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "options": [
                        {
                            "label": "Forecast.solar",
                            "value": "forecastsolar"
                        },
                        {
                            "label": "Solcast",
                            "value": "solcast"
                        },
                        {
                            "label": "SolarPredictionAPI",
                            "value": "spa"
                        }
                    ],
                    "default": "forecastsolar",
                    "label": "Forecast service"
                },
                "interval": {
                    "hidden": "data.service !== 'forecastsolar'",
                    "type": "number",
                    "min": 60,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Poll interval",
                    "help": "in minutes"
                },
                "apiKey": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "API-Key"
                },
                "weatherEnabled": {
                    "hidden": "data.service !== 'forecastsolar'",
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Weather (only with API-Key)",
                    "help": "(Professional account only)"
                },
                "latitude": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Latitude",
                    "help": "uses system config if empty"
                },
                "longitude": {
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Longitude",
                    "help": "uses system config if empty"
                },
                "_divider1": {
                    "type": "divider"
                },
                "everyhourEnabled": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "States for every hour"
                },
                "everyhourStepsize": {
                    "hidden": "!data.everyhourEnabled",
                    "type": "select",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "options": [
                        {
                            "label": {
                                "en": "Full hours (:00)",
                                "de": "Volle Stunden (:00)",
                                "ru": "Полные часы (:00)",
                                "pt": "Horas completas (:00)",
                                "nl": "Volledige uren (:00)",
                                "fr": "Heures pleines (:00)",
                                "it": "Orario intero (:00)",
                                "es": "Horas completas (:00)",
                                "pl": "Pełne godziny (:00)",
                                "uk": "Повний час (:00)",
                                "zh-cn": "全时 (:00)"
                            },
                            "value": "full"
                        },
                        {
                            "label": {
                                "en": "Half hours (:00, :30)",
                                "de": "Halbe Stunden (:00, :30)",
                                "ru": "Полчаса (:00, :30)",
                                "pt": "Meia hora (:00, :30)",
                                "nl": "Halve uren (:00, :30)",
                                "fr": "Demi-heures (:00, :30)",
                                "it": "Mezz'ora (:00, :30)",
                                "es": "Media hora (:00, :30)",
                                "pl": "Pół godziny (:00, :30)",
                                "uk": "Половини години (:00, :30)",
                                "zh-cn": "半小时 (:00, :30)"
                            },
                            "value": "half"
                        },
                        {
                            "label": {
                                "en": "Quarter hours (:00, :15, :30, :45)",
                                "de": "Viertelstunden (:00, :15, :30, :45)",
                                "ru": "Четверть часа (:00, :15, :30, :45)",
                                "pt": "Quarto de hora (:00, :15, :30, :45)",
                                "nl": "Kwartier (:00, :15, :30, :45)",
                                "fr": "Quarts d'heure (:00, :15, :30, :45)",
                                "it": "Quarto d'ora (:00, :15, :30, :45)",
                                "es": "Cuartos de hora (:00, :15, :30, :45)",
                                "pl": "kwadranse (:00, :15, :30, :45)",
                                "uk": "Мото-годин (:00, :15, :30, :45)",
                                "zh-cn": "一刻钟 (:00, :15, :30, :45)"
                            },
                            "value": "quarter"
                        }
                    ],
                    "default": "full",
                    "label": "Step size for hourly values"
                },
                "watt_kw": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Values in watt instead of kW"
                },
                "_divider2": {
                    "type": "divider"
                },
                "influxinstace": {
                    "newLine": true,
                    "type": "instance",
                    "adapter": "influxdb",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "InfluxDB instance"
                },
                "_divider3": {
                    "type": "divider"
                },
                "chartingEnabled": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Charting enabled"
                },
                "chartingJustToday": {
                    "newLine": true,
                    "hidden": "!data.chartingEnabled",
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Just include current day"
                },
                "chartingLabelFormat": {
                    "newLine": true,
                    "hidden": "!data.chartingEnabled",
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Charting label format",
                    "help": "Define a custom format like DD.MM.YYYY HH:mm:ss",
                    "helpLink": "https://momentjs.com/docs/#/parsing/string-format/"
                },
                "chartingLabelSize": {
                    "hidden": "!data.chartingEnabled",
                    "type": "number",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Charting label size"
                },
                "chartingRoation": {
                    "newLine": true,
                    "hidden": "!data.chartingEnabled",
                    "type": "number",
                    "min": -360,
                    "max": 360,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Charting label rotation"
                },
                "chartingAxisStepY": {
                    "hidden": "!data.chartingEnabled",
                    "type": "number",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Charting Y-Axis step"
                }
            }
        },
        "_advanced": {
            "type": "panel",
            "label": "PV-Systems",
            "items": {
                "devices": {
                    "type": "table",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "PV-Systems",
                    "items": [
                        {
                            "type": "text",
                            "attr": "name",
                            "width": "20%",
                            "title": {
                                "en": "Name",
                                "de": "Name",
                                "ru": "Имя",
                                "pt": "Nome",
                                "nl": "Naam",
                                "fr": "Nom",
                                "it": "Nome",
                                "es": "Nombre",
                                "pl": "Nazwa",
                                "uk": "Ім'я",
                                "zh-cn": "姓名"
                            },
                            "filter": true,
                            "sort": true,
                            "default": "PV"
                        },
                        {
                            "type": "number",
                            "min": -180,
                            "max": 180,
                            "attr": "azimuth",
                            "width": "20%",
                            "title": {
                                "en": "Azimuth",
                                "de": "Azimut",
                                "ru": "Азимут",
                                "pt": "Azimute",
                                "nl": "azimut",
                                "fr": "Azimut",
                                "it": "Azimut",
                                "es": "Azimut",
                                "pl": "Azymut",
                                "uk": "Азімута",
                                "zh-cn": "方位角"
                            },
                            "filter": false,
                            "sort": false,
                            "default": 0
                        },
                        {
                            "type": "number",
                            "min": 0,
                            "max": 90,
                            "attr": "tilt",
                            "width": "20%",
                            "title": {
                                "en": "tilt",
                                "de": "Neigung",
                                "ru": "наклон",
                                "pt": "inclinar",
                                "nl": "kantelen",
                                "fr": "inclinaison",
                                "it": "inclinazione",
                                "es": "inclinación",
                                "pl": "przechylenie",
                                "uk": "Напляскване",
                                "zh-cn": "倾斜"
                            },
                            "filter": false,
                            "sort": false,
                            "default": 45
                        },
                        {
                            "type": "number",
                            "attr": "peakpower",
                            "width": "20%",
                            "title":  {
                                "en": "Peak power",
                                "de": "Spitzenleistung",
                                "ru": "Пик власть",
                                "pt": "Potência de pico",
                                "nl": "Peak",
                                "fr": "Puissance nominale",
                                "it": "Potenza massima",
                                "es": "Potencia de pico",
                                "pl": "Peak power",
                                "uk": "Потужність Піка",
                                "zh-cn": "佩克权力"
                            },
                            "filter": false,
                            "sort": false,
                            "default": 9.9
                        },
                        {
                            "type": "color",
                            "attr": "graphcolor",
                            "width": "10%",
                            "title": {
                                "en": "Graph color",
                                "de": "Diagrammfarbe",
                                "ru": "Граф цвет",
                                "pt": "Cor do gráfico",
                                "nl": "Graf kleur",
                                "fr": "Graph color",
                                "it": "Colore del grafico",
                                "es": "Color Gráfico",
                                "pl": "Kolor",
                                "uk": "Колір графа",
                                "zh-cn": "黄色色色"
                            },
                            "filter": false,
                            "sort": false,
                            "default": "#000000"
                        },
                        {
                            "type": "color",
                            "attr": "labelcolor",
                            "width": "10%",
                            "title": {
                                "en": "Label color",
                                "de": "Etikettenfarbe",
                                "ru": "Цвет этикетки",
                                "pt": "Cor da etiqueta",
                                "nl": "Label kleur",
                                "fr": "Couleur d ' étiquette",
                                "it": "Colore dell'etichetta",
                                "es": "Color de la etiqueta",
                                "pl": "Label",
                                "uk": "Колір етикетки",
                                "zh-cn": "Labeloseph"
                            },
                            "filter": false,
                            "sort": false,
                            "default": "#000000"
                        }
                    ]
                },
                "_tiltHelp": {
                    "type": "staticText",
                    "text": "Valid titlt values: 0° (horizontal) to 90° (vertical)"
                },
                "_divider4": {
                    "type": "divider"
                },
                "_azimuthHelpTitle": {
                    "type": "header",
                    "text": "Azimuth",
                    "size": 2,
                    "sm": 12,
                    "md": 4,
                    "lg": 4
                },
                "_azimuthHelp": {
                    "newLine": true,
                    "type": "staticImage",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "src": "adapter/pvforecast/img/Azimuth.png"
                }
            }
        }
    }
}
