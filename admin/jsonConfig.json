{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "linkdata": {
                    "type": "select",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "options": [
                        {
                          "label": "Forecast.solar",
                          "value": "https://api.forecast.solar"
                        },
                        {
                          "label": "Solcast",
                          "value": "https://api.solcast.com.au"
                        }
                      ],
                    "default": "https://api.forecast.solar",
                    "label": "Forecast service"
                },
                "intervall": {
                    "hidden": "data.linkdata === 'https://api.solcast.com.au' ? true : false",
                    "type": "number",
                    "min": 60,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Poll intervall",
                    "help": "in minutes"
                },
                "apikey": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "API-Key"
                },
                "weather_active": {
                    "hidden": "data.linkdata === 'https://api.solcast.com.au' ? true : false",
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Weather (only with API-Key)"
                },
                "latitude": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Latitude",
                    "help": "uses system config if empty"
                },
                "longitude": {
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Longitude",
                    "help": "uses system config if empty"
                },
                "_divider1": {
                    "type": "divider"
                },
                "everyhour_active": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "States for every hour"
                },
                "watt_kw": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Values in watt instead of kW"
                },
                "_divider2": {
                    "type": "divider"
                },
                "influxinstace": {
                    "newLine": true,
                    "type": "instance",
                    "adapter": "influxdb",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "InfluxDB instance"
                },
                "actived_echart": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "eCharts"
                },
                "datalabel_rotation1": {
                    "newLine": true,
                    "hidden": "!data.actived_echart",
                    "type": "number",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Data label rotation (eCharts)"
                },
                "axisy_step1": {
                    "hidden": "!data.actived_echart",
                    "type": "number",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Y-Axis step (eCharts)"
                }
            }
        },
        "_advanced": {
            "type": "panel",
            "label": "PV-Systems",
            "items": {
                "devices": {
                    "type": "table",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "PV-Systems",
                    "items": [
                        {
                            "type": "text",
                            "attr": "name",
                            "width": "20%",
                            "title": {
                                "en": "name",
                                "de": "Name",
                                "ru": "имя",
                                "pt": "nome",
                                "nl": "naam",
                                "fr": "Nom",
                                "it": "nome",
                                "es": "nombre",
                                "pl": "Nazwa",
                                "zh-cn": "姓名"
                            },
                            "filter": true,
                            "sort": true,
                            "default": ""
                        },
                        {
                            "type": "number",
                            "attr": "azimuth",
                            "width": "20%",
                            "title": "Azimuth",
                            "filter": false,
                            "sort": false,
                            "default": ""
                        },
                        {
                            "type": "number",
                            "attr": "tilt",
                            "width": "20%",
                            "title": {
                                "en": "tilt",
                                "de": "Neigung",
                                "ru": "наклон",
                                "pt": "inclinar",
                                "nl": "kantelen",
                                "fr": "inclinaison",
                                "it": "inclinazione",
                                "es": "inclinación",
                                "pl": "przechylenie",
                                "zh-cn": "倾斜"
                              },
                            "filter": false,
                            "sort": false,
                            "default": ""
                        },
                        {
                            "type": "number",
                            "attr": "peakpower",
                            "width": "20%",
                            "title":  {
                                "en": "peak power",
                                "de": "Spitzenleistung",
                                "ru": "Пиковая мощность",
                                "pt": "pico de energia",
                                "nl": "piekvermogen",
                                "fr": "puissance de crête",
                                "it": "picco di potenza",
                                "es": "la punta del Poder",
                                "pl": "moc szczytowa",
                                "zh-cn": "峰值功率"
                              },
                            "filter": false,
                            "sort": false,
                            "default": ""
                        },
                        {
                            "type": "color",
                            "attr": "graphcolor",
                            "width": "10%",
                            "title": {
                                "en": "graph color",
                                "de": "Diagrammfarbe",
                                "ru": "цвет графика",
                                "pt": "cor do gráfico",
                                "nl": "grafiek kleur",
                                "fr": "couleur du graphique",
                                "it": "colore del grafico",
                                "es": "color del gráfico",
                                "pl": "kolor wykresu",
                                "zh-cn": "图形颜色"
                              },
                            "filter": false,
                            "sort": false,
                            "default": "#000000"
                        },
                        {
                            "type": "color",
                            "attr": "labelcolor",
                            "width": "10%",
                            "title": {
                                "en": "label color",
                                "de": "Etikettenfarbe",
                                "ru": "цвет этикетки",
                                "pt": "cor da etiqueta",
                                "nl": "label kleur",
                                "fr": "couleur de l'étiquette",
                                "it": "colore dell'etichetta",
                                "es": "color de la etiqueta",
                                "pl": "kolor etykiety",
                                "zh-cn": "标签颜色"
                              },
                            "filter": false,
                            "sort": false,
                            "default": "#000000"
                        }
                    ]
                }
            }
        }
    }
}