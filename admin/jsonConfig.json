{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "service": {
                    "type": "select",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "options": [
                        {
                            "label": "Forecast.solar",
                            "value": "forecastsolar"
                        },
                        {
                            "label": "Solcast",
                            "value": "solcast"
                        }
                    ],
                    "default": "forecastsolar",
                    "label": "Forecast service"
                },
                "intervall": {
                    "hidden": "data.service !== 'forecastsolar'",
                    "type": "number",
                    "min": 60,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Poll intervall",
                    "help": "in minutes"
                },
                "apiKey": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "API-Key"
                },
                "weatherEnabled": {
                    "hidden": "data.service !== 'forecastsolar'",
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Weather (only with API-Key)"
                },
                "latitude": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Latitude",
                    "help": "uses system config if empty"
                },
                "longitude": {
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Longitude",
                    "help": "uses system config if empty"
                },
                "_divider1": {
                    "type": "divider"
                },
                "everyhourEnabled": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "States for every hour"
                },
                "everyhourStepsize": {
                    "hidden": "!data.everyhourEnabled",
                    "type": "select",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "options": [
                        {
                            "label": {
                                "en": "Full hours (:00)",
                                "de": "Volle Stunden (:00)",
                                "ru": "Полные часы (:00)",
                                "pt": "Horas completas (:00)",
                                "nl": "Volledige uren (:00)",
                                "fr": "Heures pleines (:00)",
                                "it": "Orario intero (:00)",
                                "es": "Horas completas (:00)",
                                "pl": "Pełne godziny (:00)",
                                "zh-cn": "全时 (:00)"
                            },
                            "value": "full"
                        },
                        {
                            "label": {
                                "en": "Half hours (:00, :30)",
                                "de": "Halbe Stunden (:00, :30)",
                                "ru": "Полчаса (:00, :30)",
                                "pt": "Meia hora (:00, :30)",
                                "nl": "Halve uren (:00, :30)",
                                "fr": "Demi-heures (:00, :30)",
                                "it": "Mezz'ora (:00, :30)",
                                "es": "Media hora (:00, :30)",
                                "pl": "Pół godziny (:00, :30)",
                                "zh-cn": "半小时 (:00, :30)"
                            },
                            "value": "half"
                        },
                        {
                            "label": {
                                "en": "Quarter hours (:00, :15, :30, :45)",
                                "de": "Viertelstunden (:00, :15, :30, :45)",
                                "ru": "Четверть часа (:00, :15, :30, :45)",
                                "pt": "Quarto de hora (:00, :15, :30, :45)",
                                "nl": "Kwartier (:00, :15, :30, :45)",
                                "fr": "Quarts d'heure (:00, :15, :30, :45)",
                                "it": "Quarto d'ora (:00, :15, :30, :45)",
                                "es": "Cuartos de hora (:00, :15, :30, :45)",
                                "pl": "kwadranse (:00, :15, :30, :45)",
                                "zh-cn": "一刻钟 (:00, :15, :30, :45)"
                            },
                            "value": "quarter"
                        }
                    ],
                    "default": "full",
                    "label": "Step size for hourly values"
                },
                "watt_kw": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Values in watt instead of kW"
                },
                "_divider2": {
                    "type": "divider"
                },
                "influxinstace": {
                    "newLine": true,
                    "type": "instance",
                    "adapter": "influxdb",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "InfluxDB instance"
                },
                "_divider3": {
                    "type": "divider"
                },
                "chartingEnabled": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Charting enabled"
                },
                "chartingJustToday": {
                    "newLine": true,
                    "hidden": "!data.chartingEnabled",
                    "type": "checkbox",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Just include current day"
                },
                "chartingLabelFormat": {
                    "newLine": true,
                    "hidden": "!data.chartingEnabled",
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Charting label format",
                    "help": "Define a custom format like DD.MM.YYYY HH:mm:ss",
                    "helpLink": "https://momentjs.com/docs/#/parsing/string-format/"
                },
                "chartingLabelSize": {
                    "hidden": "!data.chartingEnabled",
                    "type": "number",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Charting label size"
                },
                "chartingRoation": {
                    "newLine": true,
                    "hidden": "!data.chartingEnabled",
                    "type": "number",
                    "min": -360,
                    "max": 360,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Charting label rotation"
                },
                "chartingAxisStepY": {
                    "hidden": "!data.chartingEnabled",
                    "type": "number",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Charting Y-Axis step"
                }
            }
        },
        "_advanced": {
            "type": "panel",
            "label": "PV-Systems",
            "items": {
                "devices": {
                    "type": "table",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "PV-Systems",
                    "items": [
                        {
                            "type": "text",
                            "attr": "name",
                            "width": "20%",
                            "title": {
                                "en": "name",
                                "de": "Name",
                                "ru": "имя",
                                "pt": "nome",
                                "nl": "naam",
                                "fr": "Nom",
                                "it": "nome",
                                "es": "nombre",
                                "pl": "Nazwa",
                                "zh-cn": "姓名"
                            },
                            "filter": true,
                            "sort": true,
                            "default": "PV"
                        },
                        {
                            "type": "number",
                            "min": -180,
                            "max": 180,
                            "attr": "azimuth",
                            "width": "20%",
                            "title": "Azimuth",
                            "filter": false,
                            "sort": false,
                            "default": 0
                        },
                        {
                            "type": "number",
                            "min": 0,
                            "max": 90,
                            "attr": "tilt",
                            "width": "20%",
                            "title": {
                                "en": "tilt",
                                "de": "Neigung",
                                "ru": "наклон",
                                "pt": "inclinar",
                                "nl": "kantelen",
                                "fr": "inclinaison",
                                "it": "inclinazione",
                                "es": "inclinación",
                                "pl": "przechylenie",
                                "zh-cn": "倾斜"
                              },
                            "filter": false,
                            "sort": false,
                            "default": 45
                        },
                        {
                            "type": "number",
                            "attr": "peakpower",
                            "width": "20%",
                            "title":  {
                                "en": "peak power",
                                "de": "Spitzenleistung",
                                "ru": "Пиковая мощность",
                                "pt": "pico de energia",
                                "nl": "piekvermogen",
                                "fr": "puissance de crête",
                                "it": "picco di potenza",
                                "es": "la punta del Poder",
                                "pl": "moc szczytowa",
                                "zh-cn": "峰值功率"
                              },
                            "filter": false,
                            "sort": false,
                            "default": 9.9
                        },
                        {
                            "type": "color",
                            "attr": "graphcolor",
                            "width": "10%",
                            "title": {
                                "en": "graph color",
                                "de": "Diagrammfarbe",
                                "ru": "цвет графика",
                                "pt": "cor do gráfico",
                                "nl": "grafiek kleur",
                                "fr": "couleur du graphique",
                                "it": "colore del grafico",
                                "es": "color del gráfico",
                                "pl": "kolor wykresu",
                                "zh-cn": "图形颜色"
                              },
                            "filter": false,
                            "sort": false,
                            "default": "#000000"
                        },
                        {
                            "type": "color",
                            "attr": "labelcolor",
                            "width": "10%",
                            "title": {
                                "en": "label color",
                                "de": "Etikettenfarbe",
                                "ru": "цвет этикетки",
                                "pt": "cor da etiqueta",
                                "nl": "label kleur",
                                "fr": "couleur de l'étiquette",
                                "it": "colore dell'etichetta",
                                "es": "color de la etiqueta",
                                "pl": "kolor etykiety",
                                "zh-cn": "标签颜色"
                              },
                            "filter": false,
                            "sort": false,
                            "default": "#000000"
                        }
                    ]
                },
                "_divider4": {
                    "type": "divider"
                },
                "_azimuthHelpTitle": {
                    "type": "header",
                    "text": "Azimuth",
                    "size": 2,
                    "sm": 12,
                    "md": 4,
                    "lg": 4
                },
                "_azimuthHelp": {
                    "newLine": true,
                    "type": "staticImage",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "src": "adapter/pvforecast/img/Azimuth.png"
                }
            }
        }
    }
}